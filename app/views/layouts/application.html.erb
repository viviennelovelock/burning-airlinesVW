<!DOCTYPE html>
<html>
<head>
  <title>BurningAirlines</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

 <% if @current_user.present? %>

                    
                    <li>
                        <%= link_to "Logout #{@current_user.name}", login_path, method: 'delete', data: {confirm: 'Are you sure?'}  %>
                    </li>

                    <li>
                    	 <%= link_to "#{@current_user.name} wants to fly", flights_path  %>
                    </li>

                <% else %>

                	<li>
                        <%= link_to 'New Account', new_user_path %>
                    </li>
                    <li>
                        <%= link_to 'Login', login_path %>
                    </li>

				<% end %>

<%= yield %>

</body>
</html>

