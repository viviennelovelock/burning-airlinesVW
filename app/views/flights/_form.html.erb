<%= form_for(@flight) do |f| %>
  <% if @flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
      <% @flight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :flight_number %><br>
    <%= f.text_area :flight_number %>
  </div>
  <div class="field">
    <%= f.label :origin %><br>
    <%= f.text_area :origin %>
  </div>
  <div class="field">
    <%= f.label :destination %><br>
    <%= f.text_area :destination %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.select("plane_id", Plane.all.collect {|plane| [ plane.name, plane.id ] }, {include_blank: 'None'}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
